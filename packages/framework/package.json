{
  "name": "@anvil-vault/framework",
  "version": "0.0.1",
  "keywords": [],
  "author": "Cardano-Forge",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./src/index.ts",
  "scripts": {
