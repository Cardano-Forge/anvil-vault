{
  "name": "@anvil-vault/framework",
  "description": "TypeScript tools for generating and managing cardano wallet.",
  "version": "0.0.3",
  "author": "Ada-Anvil",
  "bugs": {
    "url": "https://github.com/cardano-forge/anvil-vault/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/cardano-forge/anvil-vault",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cardano-forge/anvil-vault.git"
  },
  "keywords": [
    "typescript",
    "vault",
    "key-management",
    "signature",
    "wallet",
    "crypto",
    "blockchain",
    "cardano",
    "csl",
    "bip39",
    "cip1852",
    "cms",
    "ed25519"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsup --config build.tsup.ts",
    "check": "tsc --noEmit",
    "emit": "tsup --config emit.tsup.ts",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch --passWithNoTests",
    "publish": "tsx publish.ts"
  },
  "dependencies": {
    "@anvil-vault/bip39": "*",
    "@anvil-vault/cms": "*",
    "@anvil-vault/csl": "*",
    "@anvil-vault/express": "*",
    "@anvil-vault/handler": "*",
    "@anvil-vault/hono": "*",
    "@anvil-vault/utils": "*",
    "@anvil-vault/vault": "*"
  },
  "devDependencies": {
    "@anvil-vault/tsconfig": "*",
    "@anvil-vault/tsup": "*",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "typescript": "^5.6.2",
    "vitest": "^2.1.4"
  }
}
