{
  "name": "@ada-anvil/vault",
  "description": "TypeScript tools for generating and managing cardano wallet.",
  "version": "0.0.0",
  "author": "Ada Anvil",
  "bugs": {
    "url": "https://github.com/cardano-forge/anvil-vault/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/cardano-forge/anvil-vault",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cardano-forge/anvil-vault.git"
  },
  "keywords": [
    "typescript",
    "vault",
    "key-management",
    "signature",
    "wallet",
    "crypto",
    "blockchain",
    "cardano",
    "csl",
    "bip39",
    "cip1852",
    "cms",
    "ed25519"
  ],
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo watch dev",
    "build": "turbo run build",
    "publish": "turbo run emit && turbo run publish",
    "emit": "turbo run emit",
    "check": "turbo run check",
    "build:clean": "rimraf --glob {packages,services}/*/{dist,out,.turbo} && rimraf .turbo",
    "lint": "dotenv -c -- biome check --write .",
    "pre": "npm run lint && npm run check && npm run test",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --concurrency 20",
    "knip": "knip --fix --cache",
    "sherif": "sherif --fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/node": "^22.13.1",
    "dotenv-cli": "^7.4.2",
    "knip": "^5.50.5",
    "rimraf": "^6.0.1",
    "sherif": "^1.5.0",
    "turbo": "^2.4.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.24.0"
  },
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
