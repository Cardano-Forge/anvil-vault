{
  "name": "anvil-vault",
  "version": "0.0.0",
  "author": "Ada Anvil",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo watch dev",
    "build": "turbo run build",
    "publish": "turbo run emit && turbo run publish",
    "emit": "turbo run emit",
    "check": "turbo run check",
    "build:clean": "rimraf --glob {packages,services}/*/{dist,out,.turbo} && rimraf .turbo",
    "lint": "dotenv -c -- biome check --write .",
    "pre": "npm run lint && npm run check && npm run test",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --concurrency 20",
    "knip": "knip --fix --cache",
    "sherif": "sherif --fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/node": "^22.13.1",
    "dotenv-cli": "^7.4.2",
    "knip": "^5.50.5",
    "rimraf": "^6.0.1",
    "sherif": "^1.5.0",
    "turbo": "^2.4.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.24.0"
  },
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "private": true
}
