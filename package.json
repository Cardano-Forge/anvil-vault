{
  "name": "anvil-vault",
  "version": "0.0.0",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "turbo run build",
    "emit": "turbo run emit",
    "publish": "turbo run emit && turbo run publish",
    "check": "turbo run check",
    "build:clean": "rimraf --glob {packages,services}/*/{dist,out,.turbo} && rimraf .turbo",
    "lint": "dotenv -c -- biome check --write .",
    "pre": "npm run lint && npm run check && npm run test",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --concurrency 20"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.0",
    "@types/node": "^22.13.1",
    "chokidar": "^4.0.3",
    "dotenv-cli": "^7.4.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.4.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.24.0"
  },
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
